<%- include('partials/navbar', { page: '/solutions/projects' }) %>

<div class="hero bg-base-200 rounded-lg p-8 my-8">
  <div class="hero-content text-center">
    <div class="max-w-md">
      <h1 class="text-4xl font-bold">Explore Climate Solutions Projects</h1>
      <p class="py-4">Use the buttons below to filter by sector, or scroll to explore all projects.</p>
    </div>
  </div>
</div>

<div class="flex flex-wrap justify-center gap-4 mb-6">
  <a href="/solutions/projects?sector=Land Sinks" class="btn btn-outline">Land Sinks</a>
  <a href="/solutions/projects?sector=Industry" class="btn btn-outline">Industry</a>
  <a href="/solutions/projects?sector=Transportation" class="btn btn-outline">Transportation</a>
</div>

<div class="overflow-x-auto">
  <table class="table w-full">
    <thead>
      <tr>
        <th>Title</th>
        <th>Sector</th>
        <th>Summary</th>
        <th>Details</th>
      </tr>
    </thead>
    <tbody>
      <% projects.forEach(project => { %>
        <tr>
          <td><%= project.title %></td>
          <td>
            <a href="/solutions/projects?sector=<%= project.sector %>" class="btn btn-sm btn-outline">
              <%= project.sector %>
            </a>
          </td>
          <td><%= project.summary_short %></td>
          <td>
            <a href="/solutions/projects/<%= project.id %>" class="btn btn-sm btn-primary">Details</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
